<ZeroGUI:LazyLoadingListControlUpgrade x:Class="ZeroSales.Pages.Controls.PaymentInstrumentLazyLoadingList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Focusable="False" IsEnabled="True" MaxHeight="250" 
             xmlns:Data="clr-namespace:ZeroBusiness.Manager.Data;assembly=ZeroBusiness" xmlns:ZeroGUI="clr-namespace:ZeroGUI;assembly=ZeroGUI" 
            ItemsSource="{Binding Path=ModelManager.PaymentInstruments,Source={x:Static Data:BusinessContext.Instance}}"
                >
    <DataGrid.Columns>
        <DataGridTextColumn x:Name="codeColumn" FocusManager.IsFocusScope="False" Binding="{Binding Path=Code}" Header="Código" Width="SizeToHeader" />
        <DataGridTextColumn x:Name="nameColumn" FocusManager.IsFocusScope="True" Binding="{Binding Path=Name}" Header="" Width="180" />
    </DataGrid.Columns>

</ZeroGUI:LazyLoadingListControlUpgrade>
