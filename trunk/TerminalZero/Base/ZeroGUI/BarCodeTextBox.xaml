<UserControl x:Class="ZeroGUI.BarCodeTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:b="clr-namespace:ZeroGUI" FocusManager.FocusedElement="{Binding ElementName=barCode}"
             xmlns:r="clr-namespace:ZeroGUI.Classes"
             mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="UserControl_Loaded">
    <TextBox x:Name="barCode" PreviewKeyDown="barCode_PreviewKeyDown" b:Masking.Mask="^[0-9]{0,13}$" AcceptsReturn="False" AcceptsTab="False">
        <TextBox.Text>
            <Binding Path="Text"  UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                <Binding.ValidationRules>
                    <r:IsBarCodeRule Validating="IsBarCodeRule_Validating" />
                </Binding.ValidationRules>
            </Binding>
        </TextBox.Text>

    </TextBox>
</UserControl>
