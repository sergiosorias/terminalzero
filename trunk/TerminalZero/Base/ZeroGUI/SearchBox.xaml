<UserControl x:Class="ZeroGUI.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox Height="23" Width="200" Margin="2,2,5,2" Name="txtSearchCriteria" KeyUp="txtSearchCriteria_KeyUp"/>
            <Button Margin="2" x:Name="btnSearch" Click="btnSearch_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Buscar" VerticalAlignment="Center"/>
                    <Image Grid.Column="1" Source="/ZeroGUI;component/Resources/search.png" Height="20"/>
                </Grid>
            </Button>
            <TextBlock x:Name="quantity" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
