<UserControl x:Class="ZeroStock.Pages.Controls.StockGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:r="clr-namespace:ZeroGUI.Classes;assembly=ZeroGUI"
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <DataGrid x:Name="barcodeList"  CanUserDeleteRows="False" CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Code}" Header="Code"/>
                <DataGridTextColumn Binding="{Binding Path=Product}" Header="Product"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
